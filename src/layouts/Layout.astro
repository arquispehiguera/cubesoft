---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import { ClientRouter } from "astro:transitions";
import { Images } from "../config/images";
import { siteConfig } from "../config/site";
import { contactConfig } from "../config/contact";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={siteConfig.favicon} />
    <meta name="generator" content={Astro.generator} />
    <title>{siteConfig.title}</title>
    <meta name="description" content={siteConfig.description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <ClientRouter />
  

  </head>
  <body class="pt-16">
    <img
      id="background"
      alt={Images.background.alt}
      fetchpriority="high"
    />
 
  <Navbar  transition:animate={"fade"}/>
    <slot />

    <footer class="mt-8 py-4 border-t border-gray-200 text-center text-sm text-gray-500">
      Â© {siteConfig.name} {siteConfig.year} | {siteConfig.footer.text}
    </footer>
  </body>
  <a
    href={contactConfig.whatsapp.url}
    target="_blank"
    class="fixed bottom-6 right-6 w-16 h-16 rounded-full shadow-lg flex items-center justify-center hover:scale-110 transition-transform duration-300 z-50 border-2 border-secondary border-dotted"
    aria-label={contactConfig.whatsapp.label}
  >
    <img
      src={Images.whatshapp.src.src}
      alt={Images.whatshapp.alt}
      class="w-10 h-10 rounded-full"
      fetchpriority="high"
    />
  </a>
</html>


<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		overflow-y: scroll; /* mantiene el scroll funcional */
		scrollbar-width: none; /* Firefox */
	}
	body::-webkit-scrollbar {
		display: none; /* Chrome, Safari y Edge */
	}

	    #background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      filter: blur(100px);
      object-fit: cover;
    }
    


    
</style>
 