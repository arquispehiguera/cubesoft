---
import cube from "../assets/cube.png";
---
<nav class="fixed top-0 left-0 z-50 w-full bg-black border-b-2 shadow-md border-secondary">
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center space-x-2">
        <img src={cube.src} alt="CubeSoft Logo" class="object-contain w-20 h-20" />
        <span class="text-xl font-semibold text-white">CubeSoft</span>
      </div>
      <!-- Links Desktop -->
      <div class="hidden space-x-8 md:flex">
        <a href="/" class="text-sm text-white hover:text-primary ">Inicio</a>
        <a href="/service" class="text-sm text-white hover:text-primary ">Servicios</a>
        <a href="/about" class="text-sm text-white hover:text-primary ">Nosotros</a>
      </div>
      <!-- Botón WhatsApp -->
      <div class="hidden md:flex">
        <a href="https://wa.me/51966944375" target="_blank" class="px-4 py-2 text-sm text-white transition shadow-md bg-secondary rounded-xl hover:bg-primary">
          Contáctanos
        </a>
      </div>
      <!-- Botón móvil -->
      <div class="md:hidden">
        <button id="menu-toggle-btn" class="text-white rounded-md focus:outline-none focus:ring-2 focus:ring-primary" aria-label="Abrir menú">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Menú móvil -->
  <div id="mobile-menu" class="hidden px-4 pb-4 space-y-2 text-center bg-black md:hidden">
    <a href="/" class="block text-sm text-white hover:text-primary view-link">Inicio</a>
    <a href="/service" class="block text-sm text-white hover:text-primary view-link">Servicios</a>
    <a href="/about" class="block text-sm text-white hover:text-primary view-link">Nosotros</a>
  </div>
</nav>

<script  >
  import { setupMenuToggle } from "./MenuToggle.ts";
    document.addEventListener("DOMContentLoaded", () => {
      setupMenuToggle();    
    });
    document.addEventListener("astro:after-swap", () => {
       setupMenuToggle();    
    });
  </script>
</script>
