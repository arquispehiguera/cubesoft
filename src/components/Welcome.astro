  </div>
</div>



  </div>

  <style>
    .typewriter {
      overflow: hidden;
      white-space: nowrap;
      border-right: 3px solid #f69917;
      display: inline-block;
      width: 0;
      animation:
        typing 8s steps(36, end) infinite,
        blink 0.75s step-end infinite;
    }
    .dot {
      background-color: white;
      opacity: 0.5;
      transition: all 0.3s ease;
    }

    .dot.active {
      background-color: #f69917;
      opacity: 1;
    }

    /* Animación para escribir y borrar continuamente */
    @keyframes typing {
      0% {
        width: 0;
      }
      50% {
        width: 36ch;
      } /* ajusta 36ch según longitud del texto */
      100% {
        width: 0;
      }
    }

    @keyframes blink {
      from,
      to {
        border-color: transparent;
      }
      50% {
        border-color: #f69917;
      }
    }
  </style>

  <script>
    import { initCarousel } from "../components/Welcome";
   
    document.addEventListener("DOMContentLoaded", () => {
      initCarousel("industri-container", 4000);
    });
    document.addEventListener("astro:after-swap", () => {
      initCarousel("industri-container", 4000);
    });


  </script>
</div>
